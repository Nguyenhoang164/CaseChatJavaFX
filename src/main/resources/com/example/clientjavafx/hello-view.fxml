<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #7a6969" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.clientjavafx.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
    <HBox alignment="CENTER" prefHeight="400" prefWidth="450" style="-fx-background-color: #fcfcfc">
        <Label fx:id="Message" alignment="TOP_LEFT" prefHeight="400.0" prefWidth="458.0" />
    </HBox>
    <HBox spacing="10.0">
     <TextField fx:id="Input_Message" prefWidth="350.0" promptText="Enter message here" />
     <Button alignment="BOTTOM_CENTER" onAction="#AddMessage" text="Add" />
       <Button alignment="BOTTOM_CENTER" onAction="#DeleteMessage" text="Delete" />
   </HBox>

</VBox>
